{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/janmartenjongerius/janmartenjongerius.github.io/refs/heads/master/data/testimonial.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "relation": {
      "type": "string",
      "enum": [
        "reported directly to me",
        "managed me directly",
        "senior to me"
      ]
    },
    "avatar": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "url": {
      "type": "string",
      "format": "uri"
    }
  },
  "required": [
    "name",
    "content",
    "date",
    "relation",
    "avatar",
    "url"
  ]
}
